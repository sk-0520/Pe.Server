{
	"persistence": {
		"connection": "sqlite:<|BASE|>/data/data.sqlite3",
		"user": "",
		"password": ""
	},
	"logging": {
		"level": 3,
		"format": "{TIMESTAMP} |{LEVEL}| [{CLIENT_IP}:{CLIENT_HOST}] {REQUEST_ID}|{SESSION} <{UA}> {METHOD} {REQUEST} {FILE}({LINE}) {FUNCTION} -> {MESSAGE}",
		"file": {
			"directory": "<|BASE|>/data/logs",
			"name": "log_{DATE}.log",
			"count": 10
		}
	},
	"store": {
		"cookie": {
			"httpOnly": true
		},
		"session": {
			"name": "pe-sid",
			"save": "<|BASE|>/data/store/session"
		},
		"temporary": {
			"name": "pe-temp",
			"save": "<|BASE|>/data/store/temporary"
		}
	},
	"crypto": {
		"algorithm": "aes-256-cbc",
		"password": "password",
		"pepper": "pepper"
	},
	"config": {
		"confirm": {
			"user_change_wait_email_minutes": 10,
			"sign_up_wait_email_minutes": 10
		},
		"address": {
			"default_domain": "@localhost.localdomain",
			"from_email": {
				"name": "from",
				"address": "from@localhost.localdomain"
			},
			"return_email": "return@localhost.localdomain",
			"families": {
				"server_url": "https://peserver.gq/",
				"contact_url": "https://peserver.gq/contact",
				"app_project_url": "https://bitbucket.org/sk_0520/pe/",
				"server_project_url": "https://bitbucket.org/sk_0520/pe.server",
				"forum_url": "https://groups.google.com/g/pe_development",
				"website_url": "https://content-type-text.net/"
			}
		}
	},
	"mail": {
		"mode": "smtp",
		"smtp": {
			"host": "localhost",
			"port": 25,
			"secure": "none/ssl/tls",
			"authentication": true,
			"user_name": "mail@localhost.localdomain",
			"password": ""
		}
	},
	"i18n": {
		"@core": {
			"common": {
				"error_title": {
					"*": "エラーがあります"
				}
			},
			"error": {
				"empty": {
					"*": "入力してください"
				},
				"white_space": {
					"*": "入力してください"
				},
				"length": {
					"*": "{safe-length} 文字以内で入力してください"
				},
				"range": {
					"*": "{min} から {max} 文字以内で入力してください"
				},
				"match": {
					"*": "入力可能なパターンを入力してください"
				},
				"email": {
					"*": "メールアドレスが正しくありません"
				},
				"website": {
					"*": "URLが正しくありません"
				}
			}
		},
		"message": {
			"flash": {
				"updated_user": {
					"*": "ユーザー情報を更新しました"
				},
				"updated_password": {
					"*": "パスワードを更新しました"
				},
				"send_email_token": {
					"*": "変更先メールアドレスにトークン発行通知メールを送信しました"
				},
				"updated_email": {
					"*": "メールアドレスを更新しました"
				}
			}
		},
		"error": {
			"login_parameter": {
				"*": "ログインID/パスワードが正しくありません"
			},
			"password_incorrect": {
				"*": "パスワードが正しくありません"
			},
			"password_generate": {
				"*": "使用できないパスワードです"
			},
			"password_confirm": {
				"*": "確認用パスワードが一致しません"
			},
			"unknown_email_mode": {
				"*": "要求データが不明です"
			},
			"email_confirm_token_not_found": {
				"*": "対象トークンが無効か有効期限を超えています"
			}
		},
		"subject": {
			"email_change_token": {
				"*": "メールアドレス変更用トークン発行"
			},
			"email_change_new": {
				"*": "メールアドレス変更通知(新)"
			},
			"email_change_old": {
				"*": "メールアドレス変更通知(旧)"
			}
		}
	}
}
