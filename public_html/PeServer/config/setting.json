{
	"persistence": {
		"driver": "sqlite3",
		"connection": "<|BASE|>/data/data.sqlite3",
		"user": "",
		"passwd": ""
	},
	"logging": {
		"level": 3,
		"format": "{TIMESTAMP} |{LEVEL}| [{CLIENT_IP}:{CLIENT_HOST}] {REQUEST_ID}|{SESSION} <{UA}> {METHOD} {REQUEST} {FILE}({LINE}) {FUNCTION} -> {MESSAGE}",
		"file": {
			"dir": "<|BASE|>/data/logs",
			"name": "log_{DATE}.log",
			"count": 10
		}
	},
	"store": {
		"cookie": {
			"httpOnly": true
		}
	},
	"i18n": {
		"@core": {
			"common": {
				"error-title": {
					"*": "エラーがあります"
				}
			},
			"error": {
				"empty": {
					"*": "入力してください"
				},
				"white-space": {
					"*": "入力してください"
				},
				"length": {
					"*": "{safe-length} 文字以内で入力してください"
				},
				"range": {
					"*": "{min} から {max} 文字以内で入力してください"
				},
				"match": {
					"*": "入力可能なパターンを入力してください"
				},
				"email": {
					"*": "メールアドレスが正しくありません"
				},
				"website": {
					"*": "URLが正しくありません"
				}
			}
		},
		"error": {
			"login-parameter": {
				"*": "ログインID/パスワードが正しくありません"
			}
		}
	}
}
