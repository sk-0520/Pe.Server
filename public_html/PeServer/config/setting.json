{
	"persistence": {
		"driver": "sqlite3",
		"connection": "<|BASE|>/data/data.sqlite3",
		"user": "",
		"password": ""
	},
	"logging": {
		"level": 3,
		"format": "{TIMESTAMP} |{LEVEL}| [{CLIENT_IP}:{CLIENT_HOST}] {REQUEST_ID}|{SESSION} <{UA}> {METHOD} {REQUEST} {FILE}({LINE}) {FUNCTION} -> {MESSAGE}",
		"file": {
			"dir": "<|BASE|>/data/logs",
			"name": "log_{DATE}.log",
			"count": 10
		}
	},
	"store": {
		"cookie": {
			"httpOnly": true
		},
		"session": {
			"name": "pe"
		}
	},
	"config": {
		"confirm": {
			"user_change_wait_email_minutes": 10,
			"sign_up_wait_email_minutes": 10
		},
		"address": {
			"default_domain": "@localhost.localdomain",
			"from_email": {
				"name": "from",
				"address": "from@localhost.localdomain"
			},
			"return_email": "return@localhost.localdomain"
		}
	},
	"mail": {
		"mode": "smtp",
		"smtp": {
			"host": "localhost",
			"port": 25,
			"secure": "none/ssl/tls",
			"authentication": true,
			"user_name": "mail@localhost.localdomain",
			"password": ""
		}
	},
	"i18n": {
		"@core": {
			"common": {
				"error_title": {
					"*": "エラーがあります"
				}
			},
			"error": {
				"empty": {
					"*": "入力してください"
				},
				"white_space": {
					"*": "入力してください"
				},
				"length": {
					"*": "{safe-length} 文字以内で入力してください"
				},
				"range": {
					"*": "{min} から {max} 文字以内で入力してください"
				},
				"match": {
					"*": "入力可能なパターンを入力してください"
				},
				"email": {
					"*": "メールアドレスが正しくありません"
				},
				"website": {
					"*": "URLが正しくありません"
				}
			}
		},
		"error": {
			"login_parameter": {
				"*": "ログインID/パスワードが正しくありません"
			},
			"password_incorrect": {
				"*": "パスワードが正しくありません"
			},
			"password_generate": {
				"*": "使用できないパスワードです"
			},
			"password_confirm": {
				"*": "確認用パスワードが一致しません"
			},
			"unknown_email_mode": {
				"*": "要求データが不明です"
			},
			"email_confirm_token_not_found": {
				"*": "対象トークンが無効か有効期限を超えています"
			}
		},
		"subject": {
			"email_change_token": {
				"*": "[PeServer] メールアドレス変更用トークン発行"
			},
			"email_change_new": {
				"*": "[PeServer] メールアドレス変更通知(新)"
			},
			"email_change_old": {
				"*": "[PeServer] メールアドレス変更通知(旧)"
			}
		}
	}
}
