{
	"config": {
		"address": {
			"domain": "localhost:8080"
		}
	},
	"logging": {
		"loggers": {
			"file": {
				"logger_class": "PeServer\\Core\\Log\\FileLogger",
				"level": 3,
				"format": "{TIMESTAMP} |{LEVEL}| [{CLIENT_IP}:{CLIENT_HOST}] {REQUEST_ID}|{SESSION} <{UA}> {METHOD} {REQUEST} {FILE}({LINE}) {FUNCTION} -> {MESSAGE}",
				"configuration": {
					"directory": "$(BASE)/../../test/storage-it/logs",
					"name": "log_{DATE}.log",
					"count": 365
				}
			}
		},
		"archive_size": 5242880
	},
	"persistence": {
		"default": {
			"connection": "sqlite:$(BASE)/../../test/storage-it/data.sqlite3",
			"_connection_memory": "sqlite::memory:",
			"user": "",
			"passwd": ""
		}
	},
	"store": {
		"cookie": {
			"httpOnly": true,
			"sameSite": "lax"
		},
		"session": {
			"name": "pe-sid",
			"save": "$(BASE)/../../test/storage-it/store/session",
			"cookie": {}
		},
		"temporary": {
			"name": "pe-temp",
			"save": "$(BASE)/../../test/storage-it/store/temporary",
			"cookie": {
				"span": "PT3M"
			}
		}
	},
	"cache": {
		"temporary": "$(BASE)/../../test/storage-it/temp/buckets",
		"database": "$(BASE)/../../test/storage-it/database_cache",
		"template": "$(BASE)/../../test/storage-it/temp/template",
		"backup": "$(BASE)/../../test/storage-it/backups",
		"deploy": "$(BASE)/../../test/storage-it/temp/deploy"
	},
	"access_log": {
		"directory": "$(BASE)/../../test/storage-it/access_log"
	}
}
