// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/php
{
	"name": "Pe.Server",

	"build": {
		"dockerfile": "./images/www/Dockerfile"
	},

	"workspaceFolder": "/app",
	"mounts": [
		{"type":"bind","source":"${localWorkspaceFolder}", "target":"${containerWorkspaceFolder}"}
	],

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Configure tool-specific properties.
	// "customizations": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [80, 443],
	"overrideCommand": false,
	"customizations": {
		"vscode": {
			"extensions": [
				"bmewburn.vscode-intelephense-client",
				"neilbrayfield.php-docblocker",
				"editorconfig.editorconfig",
				"mehedidracula.php-namespace-resolver",
				"sibiraj-s.vscode-scss-formatter",
				"formulahendry.auto-close-tag",
				"mrmlnc.vscode-apache",
				"kasik96.latte",
				"xdebug.php-debug",
				"santacodes.santacodes-region-viewer",
				"aswinkumar863.smarty-template-support",
				"yusukehirao.vscode-markuplint",
				"timonwong.shellcheck",
				"sanderronde.phpstan-vscode",
				"mads-hartmann.bash-ide-vscode",
				"streetsidesoftware.code-spell-checker",
				"EditorConfig.EditorConfig",
				"Orta.vscode-jest",
				"MehediDracula.php-namespace-resolver",
				"SanderRonde.phpstan-vscode"
			]
		}
	}

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "sudo chmod a+x \"$(pwd)\" && sudo rm -rf /var/www/html && sudo ln -s \"$(pwd)\" /var/www/html"
	// "postStartCommand": "npm ci",
	// "postAttachCommand": "npm run build"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
