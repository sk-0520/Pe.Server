{
	"name": "pe.server",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"lint:type": "tsc --noEmit",
		"lint:script": "biome check .",
		"lint": "npm-run-all --parallel lint:*",
		"test:script": "jest",
		"test": "npm-run-all --sequential test:script",
		"watch": "rspack build --nodeEnv development --watch",
		"build-develop": "rspack build --nodeEnv development",
		"build": "rspack build --nodeEnv production",
		"fix-script": "biome check --write .",
		"fix-script-unsafe": "biome check --write --unsafe .",
		"npm-check": "ncu",
		"npm-update": "ncu -u && npm install"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:sk-0520/Pe.Server.git"
	},
	"author": "sk",
	"license": "WTFPL2",
	"bugs": {
		"url": "https://github.com/sk-0520/Pe.Server/issues"
	},
	"homepage": "https://github.com/sk-0520/Pe.Server/blob/master/README.md",
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": [
				"ts-jest",
				"tsconfig.json"
			]
		},
		"testMatch": [
			"**/scripts-test/**/*"
		],
		"collectCoverage": true,
		"coverageDirectory": "public_html/public/coverage/script"
	},
	"browserslist": [
		"ie >= 11",
		"Android >= 4",
		"last 2 versions"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@rspack/cli": "^1.5.4",
		"@rspack/core": "^1.5.4",
		"@types/jest": "^30.0.0",
		"autoprefixer": "^10.4.21",
		"css-loader": "^7.1.2",
		"jest": "^30.1.3",
		"jest-environment-jsdom": "^30.1.2",
		"mini-css-extract-plugin": "^2.9.4",
		"normalize-sass": "^1.0.0",
		"npm-check-updates": "^18.1.1",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-loader": "^8.2.0",
		"reset-css": "^5.0.2",
		"sass": "^1.92.1",
		"sass-embedded": "^1.92.1",
		"sass-loader": "^16.0.5",
		"ts-jest": "^29.4.2",
		"ts-loader": "^9.5.4",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	}
}
