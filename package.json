{
	"name": "pe.server",
	"version": "1.0.0",
	"description": "* https://sourceforge.net/projects/xampp/files/XAMPP%20Windows/8.0.7/\r   * `xampp-portable-windows-x64-8.0.7-0-VS16.7z`",
	"main": "index.js",
	"scripts": {
		"test:script": "jest",
		"test": "npm-run-all --sequential test:script",
		"build:debug": "webpack --mode=development --config=webpack.config.ts",
		"build:release": "webpack --mode=production --config=webpack.config.ts",
		"build": "npm-run-all --sequential build:debug build:release",
		"watch": "webpack --watch --cache --mode=development --config=webpack.config.ts",
		"check": "ncu",
		"update": "ncu -u && npm install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://sk_0520@bitbucket.org/sk_0520/pe.server.git"
	},
	"author": "sk",
	"license": "WTFPL2",
	"bugs": {
		"url": "https://bitbucket.org/sk_0520/pe.server/issues"
	},
	"homepage": "https://bitbucket.org/sk_0520/pe.server/src/master/README.md",
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/scripts-test/**/*"
		],
		"collectCoverage": true,
		"coverageDirectory": "coverage/script"
	},
	"browserslist": [
		"ie >= 11",
		"Android >= 4",
		"last 2 versions"
	],
	"devDependencies": {
		"@types/jest": "^27.4.1",
		"@types/webpack": "^5.28.0",
		"autoprefixer": "^10.4.4",
		"css-loader": "^6.7.1",
		"jest": "^27.5.1",
		"mini-css-extract-plugin": "^2.6.0",
		"normalize-sass": "^1.0.0",
		"npm-check-updates": "^12.5.9",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.12",
		"postcss-loader": "^6.2.1",
		"reset-css": "^5.0.1",
		"sass": "^1.50.1",
		"sass-loader": "^12.6.0",
		"terser-webpack-plugin": "^5.3.1",
		"ts-jest": "^27.1.4",
		"ts-loader": "^9.2.8",
		"ts-node": "^10.7.0",
		"typescript": "^4.6.3",
		"webpack": "^5.72.0",
		"webpack-cli": "^4.9.2",
		"webpack-fix-style-only-entries": "^0.6.1",
		"webpack-livereload-plugin": "^3.0.2"
	}
}
