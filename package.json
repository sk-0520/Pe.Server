{
	"name": "pe.server",
	"version": "1.0.0",
	"description": "* https://sourceforge.net/projects/xampp/files/XAMPP%20Windows/7.1.1/\r   * `xampp-portable-win32-7.1.1-0-VC14.7z`",
	"main": "index.js",
	"scripts": {
		"test:script": "jest",
		"test": "npm-run-all --sequential test:script",
		"build:debug": "webpack --mode=development --config=webpack.config.ts",
		"build:release": "webpack --mode=production --config=webpack.config.ts",
		"build": "npm-run-all --sequential build:debug build:release",
		"watch": "webpack --watch --cache --mode=development --config=webpack.config.ts",
		"check": "ncu",
		"update": "ncu -u && npm install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://sk_0520@bitbucket.org/sk_0520/pe.server.git"
	},
	"author": "",
	"license": "WTFPL2",
	"bugs": {
		"url": "https://bitbucket.org/sk_0520/pe.server/issues"
	},
	"homepage": "https://bitbucket.org/sk_0520/pe.server#readme",
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/scripts-test/**/*"
		],
		"collectCoverage": true,
		"coverageDirectory": "-script-coverage"
	},
	"browserslist": [
		"ie >= 11",
		"Android >= 4",
		"last 2 versions"
	],
	"devDependencies": {
		"@types/jest": "^27.0.3",
		"@types/webpack": "^5.28.0",
		"autoprefixer": "^10.4.0",
		"css-loader": "^6.5.1",
		"jest": "^27.4.2",
		"mini-css-extract-plugin": "^2.4.5",
		"node-sass": "^6.0.1",
		"normalize-sass": "^1.0.0",
		"npm-check-updates": "^12.0.2",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.4",
		"postcss-loader": "^6.2.1",
		"sass-loader": "^12.3.0",
		"terser-webpack-plugin": "^5.2.5",
		"ts-jest": "^27.0.7",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.2",
		"webpack": "^5.64.4",
		"webpack-cli": "^4.9.1",
		"webpack-fix-style-only-entries": "^0.6.1"
	}
}
