{
	"name": "pe.server",
	"version": "1.0.0",
	"description": "* https://sourceforge.net/projects/xampp/files/XAMPP%20Windows/8.0.7/\r   * `xampp-portable-windows-x64-8.0.7-0-VS16.7z`",
	"main": "index.js",
	"scripts": {
		"test:script": "jest",
		"test": "npm-run-all --sequential test:script",
		"build:debug": "webpack --mode=development --config=webpack.config.ts",
		"build:release": "webpack --mode=production --config=webpack.config.ts",
		"build": "npm-run-all --sequential build:debug build:release",
		"watch": "webpack --watch --cache --mode=development --config=webpack.config.ts",
		"check": "ncu",
		"update": "ncu -u && npm install"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:sk-0520/Pe.Server.git"
	},
	"author": "sk",
	"license": "WTFPL2",
	"bugs": {
		"url": "https://github.com/sk-0520/Pe.Server/issues"
	},
	"homepage": "https://github.com/sk-0520/Pe.Server/blob/master/README.md",
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"js"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.json"
			}
		},
		"testMatch": [
			"**/scripts-test/**/*"
		],
		"collectCoverage": true,
		"coverageDirectory": "public_html/public/coverage/script"
	},
	"browserslist": [
		"ie >= 11",
		"Android >= 4",
		"last 2 versions"
	],
	"devDependencies": {
		"@types/jest": "^29.2.0",
		"@types/webpack": "^5.28.0",
		"autoprefixer": "^10.4.12",
		"css-loader": "^6.7.1",
		"jest": "^29.2.2",
		"mini-css-extract-plugin": "^2.6.1",
		"normalize-sass": "^1.0.0",
		"npm-check-updates": "^16.3.15",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.18",
		"postcss-loader": "^7.0.1",
		"reset-css": "^5.0.1",
		"sass": "^1.55.0",
		"sass-loader": "^13.1.0",
		"terser-webpack-plugin": "^5.3.6",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4",
		"webpack": "^5.74.0",
		"webpack-cli": "^4.10.0",
		"webpack-fix-style-only-entries": "^0.6.1",
		"webpack-livereload-plugin": "^3.0.2"
	}
}
