{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"assist": {
		"enabled": true,
		"actions": {
			"recommended": true,
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"a11y": {
				"useValidAnchor": "off",
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off"
			}
		}
	},
	"files": {
		"includes": ["*/alt/**/*"]
	},
	"formatter": {
		"useEditorconfig": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	}
}
